<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.dao.IUserDAO">
    <resultMap id="userMap" type="com.example.domain.User">
        <result column="id" property="id" />
        <result column="username" property="username" />
        <result column="birthday" property="birthday" />
        <result column="sex" property="sex" />
        <result column="address" property="address" />
        <collection column="accounts" property="accounts" ofType="com.example.domain.Account">
            <result column="aid" property="id" />
            <result column="uid" property="uid" />
            <result column="money" property="money" />
        </collection>
    </resultMap>

    <!-- 一对多：一个 User 对应多个 Account -->
    <select id="findAll" resultMap="userMap">
        SELECT u.*,a.id aid,a.uid,a.money
        FROM user u,account a
        WHERE u.id = a.uid
    </select>
</mapper>